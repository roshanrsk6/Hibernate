<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">roshan</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernatedb</property>
        <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
       	<mapping class="my.training.stockpricereaderservice.model.Userdetails"/>
        <mapping class="my.training.stockpricereaderservice.model.Vehicle"/>
        <mapping class="my.training.stockpricereaderservice.model.FourWheeler"/>
        <mapping class="my.training.stockpricereaderservice.model.TwoWheeler"/>
      

    </session-factory>
</hibernate-configuration>